<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/back_Notif" tools:context=".NotifAd">

    <TextView android:id="@+id/tv_Notif_Title" android:layout_width="367dp"
        android:layout_height="89dp" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:text="TextView" android:textAlignment="viewEnd"
        android:textSize="24sp" android:textStyle="bold" android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_Notif" />

    <TextView android:id="@+id/tv_Notif_Name" android:layout_width="wrap_content"
        android:layout_height="23dp" android:layout_marginEnd="116dp"
        android:layout_marginStart="8dp" android:layout_marginTop="244dp" android:text="TextView"
        android:textSize="18sp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Notif_Title" />

    <RatingBar android:id="@+id/ratingBar_Notif" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/tv_Notif_Comment" android:layout_width="186dp"
        android:layout_height="86dp" android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp" android:layout_marginStart="32dp"
        android:layout_marginTop="8dp" android:text="TextView" android:textStyle="bold"
        android:inputType="textMultiLine" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/tv_Notif_Name"
        app:layout_constraintVertical_bias="0.804" />

    <android.support.v7.widget.CardView android:id="@+id/cardView" android:layout_width="90dp"
        android:layout_height="90dp" android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" android:layout_marginStart="24dp"
        android:layout_marginTop="8dp" android:innerRadius="0dp" android:shape="ring"
        android:thicknessRatio="2" app:cardCornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView android:id="@+id/iv_Notif_photo" android:layout_width="match_parent"
            android:layout_height="match_parent" android:scaleType="fitXY"
            android:src="@android:color/background_light" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>