<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mmiazi.uab_v1">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ShowAdsActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".NotifAd"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".SendReviewsActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".createAds_activities.CAd1Activity"
            android:parentActivityName=".SendReviewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SendReviewsActivity" />
        </activity>

        <activity android:name=".createAds_activities.CAd2Activity">
            android:parentActivityName=".SendReviewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SendReviewsActivity" />
        </activity>

        <activity android:name=".createAds_activities.CAd3Activity">
            android:parentActivityName=".SendReviewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SendReviewsActivity" />
        </activity>
    </application>

</manifest>